@using Microsoft.AspNetCore.Http
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@Model.NoteTitle</h3>
    </div>
</div>
<div class="row">
    <div class="">
        <h5 class="card-title">
            @Model.NoteTitle
        </h5>
        <p class="card-text">
            @Model.NoteContents
        </p>
        <div>
            <a class="btn btn-primary" asp-controller="Note" asp-action="Index">LIST</a>
            @if (Context.Session.GetInt32("USER_LOGIN_KEY") == Model.UserNo)
            {
                <a class="btn btn-danger" asp-controller="Note" asp-action="Edit" asp-route-noteNo="@Model.NoteNo">Edit</a>
                <a class="btn btn-dark" asp-controller="Note" asp-action="Delete" asp-route-noteNo="@Model.NoteNo">Remove</a>
            }
        </div>
    </div>
</div>