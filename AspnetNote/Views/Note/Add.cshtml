@model AspnetNote.Models.Note
<h2>WRITE</h2>

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
        <form class="form" method="post" asp-controller="Note" asp-action="ADD">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="NoteTitle" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="20" asp-for="NoteContents"></textarea>
                <span class="text-danger" asp-validation-for="NoteContents"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">Cancel</a>
            </div>

        </form>
    </div>
    <div class="col-lg-4"></div>
</div>