@using Microsoft.AspNetCore.Http
@model AspnetNote.Models.Note
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">@Model.NoteTitle</h3>
    </div>
</div>
<div class="row">
    <form class="form" method="post" asp-controller="Note" asp-action="EditCommit">
        <div class="">
            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="NoteTitle" value="@Model.NoteTitle" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>
            <div class="form-group">
                <textarea class="form-control editor" rows="20" asp-for="NoteContents" value="@Model.NoteContents"></textarea>
                <span class="text-danger" asp-validation-for="NoteContents"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">Cancel</a>
                <input type="hidden" asp-for="NoteNo" value="@Model.NoteNo">
            </div>
        </div>
    </form>
</div>