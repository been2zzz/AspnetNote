@model AspnetNote.ViewModel.LoginViewModel
<h2>Login</h2>
<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>ID</label>
        <input type="text" asp-for="UserId" class="form-control" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>PW</label>
        <input type="password" asp-for="UserPassword" class="form-control" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>
    </div>
</form>